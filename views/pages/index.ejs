<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
<script>
$(document).ready(function() {
  var queryParam = window && window.location && window.location.search ?  window.location.search.replace("?", '') : "";
  if(queryParam && ("state=loginFailed" === queryParam)) {
        $("div.loginFailed").css({display : "block"});
  }
});

</script>
</head>

<body>


<div class="jumbotron text-center">
  <div class="container">

      <div class="wrapper">
        <form class="form-signin" action="/login" method="POST" role="form">
          <div class="titlewrapper">
            <img src="/gso-cologne.jpg">
            <h4 class="form-signin-heading">DriveBy GSO - Please login</h4>
         </div>
          <input type="text" class="form-control" name="account" placeholder="Account" required="" autofocus="" />
          <input type="password" class="form-control" name="password" placeholder="Password" required=""/>
          <label class="checkbox" style="display:none !important;">
            <input type="checkbox" value="remember-me" id="rememberMe" name="rememberMe"> Remember me
          </label>
          <div class="alert alert-danger loginFailed" style="display:none;">
            <strong>Login failed!</strong> You have entered a wrong username / password.
          </div>
          <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
        </form>
      </div>

  </div>
</div>

</body>
</html>
